{
  "name": "@kb-labs/cli",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "KB Labs CLI tool for project management and automation",
  "bin": { "kb": "dist/bin.js" },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "smoke": "node ./dist/bin.js hello",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-adapters": "workspace:*",
    "@kb-labs/cli-commands": "workspace:*",
    "@kb-labs/cli-core": "workspace:*"
  },
  "devDependencies": {
    "rimraf": "^6.0.1"
  }
}