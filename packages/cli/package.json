{
  "name": "@kb-labs/cli-bin",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "KB Labs CLI tool for project management and automation",
  "bin": {
    "kb": "dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared.js",
      "types": "./dist/shared.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "smoke": "node ./dist/bin.js hello",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/analytics-sdk-node": "workspace:*",
    "@kb-labs/cli-commands": "workspace:*",
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/cli-runtime": "workspace:*",
    "@kb-labs/core-cli-adapters": "workspace:*",
    "@kb-labs/core-types": "workspace:*",
    "@kb-labs/core-sys": "workspace:*",
    "@kb-labs/plugin-adapter-cli": "workspace:*",
    "@kb-labs/plugin-runtime": "workspace:*",
    "@kb-labs/shared-cli-ui": "workspace:*",
    "cli-table3": "^0.6.5",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "picomatch": "^4.0.2",
    "uuidv7": "^1.0.0",
    "yaml": "^2.8.0",
    "execa": "^9.4.0",
    "chokidar": "^4.0.3",
    "semver": "^7.6.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "vitest": "^3.2.4"
  }
}
