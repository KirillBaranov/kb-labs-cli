{
  "name": "@kb-labs/cli-bin",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "KB Labs CLI tool for project management and automation",
  "bin": {
    "kb": "dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "smoke": "node ./dist/bin.js hello",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-adapters": "link:../adapters",
    "@kb-labs/cli-commands": "link:../commands",
    "@kb-labs/cli-core": "link:../core",
    "@kb-labs/mind-adapters": "link:../../../kb-labs-mind/packages/mind-adapters",
    "@kb-labs/mind-core": "link:../../../kb-labs-mind/packages/mind-core",
    "@kb-labs/mind-indexer": "link:../../../kb-labs-mind/packages/mind-indexer",
    "@kb-labs/mind-pack": "link:../../../kb-labs-mind/packages/mind-pack",
    "@kb-labs/audit-core": "link:../../../kb-labs-audit/packages/audit-core",
    "@kb-labs/audit-checks": "link:../../../kb-labs-audit/packages/audit-checks"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "vitest": "^3.2.4"
  }
}
