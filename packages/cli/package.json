{
  "name": "@kb-labs/cli-bin",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "KB Labs CLI tool for project management and automation",
  "bin": {
    "kb": "dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared.js",
      "types": "./dist/shared.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "smoke": "node ./dist/bin.js hello",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-commands": "link:../commands",
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/cli-runtime": "link:../cli-runtime",
    "@kb-labs/core-cli-adapters": "link:../../../kb-labs-core/packages/cli-adapters",
    "glob": "^11.0.3",
    "@kb-labs/shared-cli-ui": "link:../../../kb-labs-shared/packages/cli-ui",
    "cli-table3": "^0.6.5",
    "yaml": "^2.8.0",
    "@kb-labs/mind-adapters": "link:../../../kb-labs-mind/packages/mind-adapters",
    "@kb-labs/mind-core": "link:../../../kb-labs-mind/packages/mind-core",
    "@kb-labs/mind-indexer": "link:../../../kb-labs-mind/packages/mind-indexer",
    "@kb-labs/mind-pack": "link:../../../kb-labs-mind/packages/mind-pack",
    "@kb-labs/audit-core": "link:../../../kb-labs-audit/packages/audit-core",
    "@kb-labs/audit-checks": "link:../../../kb-labs-audit/packages/audit-checks",
    "@kb-labs/plugin-adapter-cli": "link:../../../kb-labs-plugin/packages/adapters/cli",
    "@kb-labs/analytics-sdk-node": "link:../../../kb-labs-analytics/packages/analytics-sdk-node",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "vitest": "^3.2.4"
  }
}
