{
  "name": "@kb-labs/cli-core",
  "version": "0.1.0",
  "description": "Core domain logic for KB Labs CLI - registry, discovery, lifecycle, dependencies",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
