    "chokidar": "^4.0.3",
    "glob": "^11.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/semver": "^7.5.8",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0"
  }
