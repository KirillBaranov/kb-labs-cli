{
  "name": "@kb-labs/cli-core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core functionality for KB Labs CLI - command framework, context, and utilities",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./public": {
      "types": "./dist/public.d.ts",
      "import": "./dist/public.js",
      "require": "./dist/public.cjs",
      "default": "./dist/public.js"
    },
    "./v3": {
      "types": "./dist/v3/index.d.ts",
      "import": "./dist/v3/index.js",
      "require": "./dist/v3/index.cjs",
      "default": "./dist/v3/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kb-labs/cli-contracts": "workspace:*",
    "@kb-labs/core-sys": "^1.0.0",
    "@kb-labs/core-runtime": "^1.0.0",
    "@kb-labs/core-platform": "^1.0.0",
    "@kb-labs/plugin-runtime": "^1.0.0",
    "@kb-labs/plugin-contracts": "^1.0.0",
    "colorette": "^2.0.20",
    "semver": "^7.6.3",
    "chokidar": "^4.0.0",
    "glob": "^11.0.0",
    "yaml": "^2.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "@types/semver": "^7.5.8",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4",
    "@kb-labs/devkit": "^1.0.0",
    "typescript": "^5.6.3"
  },
  "module": "./dist/index.js",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
