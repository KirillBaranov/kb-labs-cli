{
  "name": "@kb-labs/cli-core",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Core functionality for KB Labs CLI - command framework, context, and utilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./public": {
      "import": "./dist/public.js",
      "types": "./dist/public.d.ts"
    },
    "./v3": {
      "import": "./dist/v3/index.js",
      "types": "./dist/v3/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-contracts": "workspace:*",
    "@kb-labs/core-sys": "link:../../../kb-labs-core/packages/core-sys",
    "@kb-labs/plugin-manifest": "link:../../../kb-labs-plugin/packages/plugin-manifest",
    "@kb-labs/plugin-adapter-rest": "link:../../../kb-labs-plugin/packages/plugin-adapters/rest",
    "@kb-labs/plugin-runtime": "link:../../../kb-labs-plugin/packages/plugin-runtime",
    "@kb-labs/plugin-contracts-v3": "workspace:*",
    "@kb-labs/plugin-runtime-v3": "workspace:*",
    "colorette": "^2.0.20",
    "semver": "^7.6.3",
    "chokidar": "^4.0.3",
    "glob": "^11.0.0",
    "yaml": "^2.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "@types/semver": "^7.5.8",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
