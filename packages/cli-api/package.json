{
  "name": "@kb-labs/cli-api",
  "version": "0.1.0",
  "description": "Programmatic API for KB Labs CLI - stable interface for REST API, webhooks, and agents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": ["src/*"]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/plugin-manifest": "link:../../../kb-labs-plugin/packages/manifest",
    "@kb-labs/workflow-engine": "link:../../../kb-labs-workflow/packages/workflow-engine",
    "@kb-labs/workflow-contracts": "link:../../../kb-labs-workflow/packages/workflow-contracts",
    "@kb-labs/workflow-constants": "link:../../../kb-labs-workflow/packages/workflow-constants",
    "redis": "^4.6.7",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}

