{
  "name": "@kb-labs/cli-core",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Core functionality for KB Labs CLI - command framework, context, and utilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "cpy-cli": "^4.2.0",
    "rimraf": "^6.0.1",
    "vitest": "^3.2.4"
  }
}