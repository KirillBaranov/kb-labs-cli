{
  "name": "@kb-labs/cli-bin",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "KB Labs CLI tool for project management and automation",
  "bin": {
    "kb": "dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared.js",
      "types": "./dist/shared.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts && pnpm run copy-bootstrap",
    "copy-bootstrap": "mkdir -p dist && cp ../../../kb-labs-plugin/packages/plugin-runtime/dist/sandbox/bootstrap.js dist/bootstrap.js",
    "dev": "tsup --config tsup.config.ts --watch",
    "smoke": "node ./dist/bin.js hello",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kb-labs/cli-commands": "workspace:*",
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/cli-runtime": "workspace:*",
    "@kb-labs/core-config": "link:../../../kb-labs-core/packages/core-config",
    "@kb-labs/core-runtime": "link:../../../kb-labs-core/packages/core-runtime",
    "@kb-labs/core-sandbox": "link:../../../kb-labs-core/packages/core-sandbox",
    "@kb-labs/core-sys": "link:../../../kb-labs-core/packages/core-sys",
    "@kb-labs/plugin-contracts": "link:../../../kb-labs-plugin/packages/plugin-contracts",
    "@kb-labs/plugin-manifest": "link:../../../kb-labs-plugin/packages/plugin-manifest",
    "@kb-labs/plugin-runtime": "link:../../../kb-labs-plugin/packages/plugin-runtime",
    "@kb-labs/shared-cli-ui": "link:../../../kb-labs-shared/packages/shared-cli-ui"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4",
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
