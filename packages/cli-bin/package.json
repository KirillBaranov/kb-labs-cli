{
  "name": "@kb-labs/cli-bin",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "KB Labs CLI tool for project management and automation",
  "bin": {
    "kb": "dist/bin.cjs"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared.js",
      "types": "./dist/shared.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup --config tsup.bin.config.ts && tsup --config tsup.lib.config.ts && pnpm run copy-bootstrap",
    "copy-bootstrap": "mkdir -p dist && cp ../../../kb-labs-plugin/packages/plugin-runtime-v3/dist/sandbox/bootstrap.js dist/bootstrap.js",
    "dev": "tsup --config tsup.config.ts --watch",
    "smoke": "node ./dist/bin.cjs hello",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-commands": "workspace:*",
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/cli-runtime": "workspace:*",
    "@kb-labs/core-config": "link:../../../kb-labs-core/packages/core-config",
    "@kb-labs/core-platform": "link:../../../kb-labs-core/packages/core-platform",
    "@kb-labs/core-runtime": "link:../../../kb-labs-core/packages/core-runtime",
    "@kb-labs/core-sandbox": "link:../../../kb-labs-core/packages/core-sandbox",
    "@kb-labs/core-sys": "link:../../../kb-labs-core/packages/core-sys",
    "@kb-labs/core-types": "link:../../../kb-labs-core/packages/core-types",
    "@kb-labs/plugin-manifest": "link:../../../kb-labs-plugin/packages/plugin-manifest",
    "@kb-labs/plugin-runtime": "link:../../../kb-labs-plugin/packages/plugin-runtime",
    "@kb-labs/shared-cli-ui": "link:../../../kb-labs-shared/packages/shared-cli-ui"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
