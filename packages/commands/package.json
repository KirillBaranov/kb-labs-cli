{
  "name": "@kb-labs/cli-commands",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Command implementations for KB Labs CLI",
  "bin": {
    "kb": "./dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-core": "link:../core",
    "@kb-labs/cli-adapters": "link:../adapters",
    "ajv": "^8.17.1",
    "yaml": "^2.5.1",
    "glob": "^11.0.0",
    "@kb-labs/core-bundle": "link:../../../kb-labs-core/packages/bundle",
    "@kb-labs/core-config": "link:../../../kb-labs-core/packages/config",
    "@kb-labs/core-policy": "link:../../../kb-labs-core/packages/policy",
    "@kb-labs/core-profiles": "link:../../../kb-labs-core/packages/profiles",
    "@kb-labs/devlink-core": "link:../../../kb-labs-devlink/packages/core",
    "@kb-labs/shared-cli-ui": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "cpy-cli": "^4.2.0",
    "rimraf": "^6.0.1",
    "vitest": "^3.2.4"
  }
}
