{
  "name": "@kb-labs/cli-commands",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Command implementations for KB Labs CLI",
  "bin": { "kb": "./dist/bin.js" },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "tsup --config tsup.config.ts",
    "build:types": "tsc -p tsconfig.types.json --emitDeclarationOnly",
    "build": "pnpm clean && pnpm build:js && pnpm build:types",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc -p tsconfig.types.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/cli-adapters": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "cpy-cli": "^4.2.0",
    "rimraf": "^6.0.1"
  }
}
