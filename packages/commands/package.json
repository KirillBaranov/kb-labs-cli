{
  "name": "@kb-labs/cli-commands",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Command implementations for KB Labs CLI",
  "bin": {
    "kb": "./dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit -p tsconfig.build.json",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-api": "workspace:*",
    "@kb-labs/shared-command-kit": "workspace:*",
    "@kb-labs/cli-contracts": "workspace:*",
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/core-cli-adapters": "workspace:*",
    "@kb-labs/core-config": "workspace:*",
    "@kb-labs/core-sys": "workspace:*",
    "@kb-labs/plugin-adapter-cli": "workspace:*",
    "@kb-labs/plugin-adapter-rest": "workspace:*",
    "@kb-labs/plugin-adapter-studio": "workspace:*",
    "@kb-labs/plugin-manifest": "workspace:*",
    "@kb-labs/plugin-runtime": "workspace:*",
    "@kb-labs/core-sandbox": "workspace:*",
    "@kb-labs/setup-engine": "workspace:*",
    "@kb-labs/setup-operations": "workspace:*",
    "@kb-labs/shared-cli-ui": "workspace:*",
    "@kb-labs/workflow-contracts": "link:../../../kb-labs-workflow/packages/workflow-contracts",
    "@kb-labs/workflow-engine": "link:../../../kb-labs-workflow/packages/workflow-engine",
    "@kb-labs/workflow-runtime": "link:../../../kb-labs-workflow/packages/workflow-runtime",
    "ajv": "^8.17.1",
    "glob": "^11.0.0",
    "yaml": "^2.8.0",
    "zod": "^3.23.8",
    "minimatch": "^9.0.4"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
