{
  "name": "@kb-labs/cli-adapters",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Adapters for KB Labs CLI - file system, environment, and discovery utilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/cli-core": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "picomatch": "^4.0.2",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "cpy-cli": "^4.2.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
