{
  "name": "@kb-labs/cli-commands",
  "version": "1.0.0",
  "type": "module",
  "description": "Command implementations for KB Labs CLI",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit -p tsconfig.build.json",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kb-labs/cli-api": "workspace:*",
    "@kb-labs/cli-contracts": "workspace:*",
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/core-platform": "^1.0.0",
    "@kb-labs/core-ipc": "^1.0.0",
    "@kb-labs/core-resource-broker": "^1.0.0",
    "@kb-labs/core-runtime": "^1.0.0",
    "@kb-labs/core-state-broker": "^1.0.0",
    "@kb-labs/core-sys": "^1.0.0",
    "@kb-labs/plugin-contracts": "^1.0.0",
    "@kb-labs/plugin-execution": "^1.0.0",
    "@kb-labs/plugin-runtime": "^1.0.0",
    "@kb-labs/setup-engine-core": "link:../../../kb-labs-setup-engine/packages/setup-engine-core",
    "@kb-labs/setup-engine-operations": "link:../../../kb-labs-setup-engine/packages/setup-engine-operations",
    "@kb-labs/shared-cli-ui": "^1.0.0",
    "@kb-labs/shared-command-kit": "^1.0.0",
    "@kb-labs/workflow-artifacts": "link:../../../kb-labs-workflow/packages/workflow-artifacts",
    "@kb-labs/workflow-constants": "link:../../../kb-labs-workflow/packages/workflow-constants",
    "@kb-labs/workflow-contracts": "link:../../../kb-labs-workflow/packages/workflow-contracts",
    "@kb-labs/workflow-engine": "link:../../../kb-labs-workflow/packages/workflow-engine",
    "@kb-labs/workflow-runtime": "link:../../../kb-labs-workflow/packages/workflow-runtime",
    "ajv": "^8.17.1",
    "glob": "^11.0.0",
    "yaml": "^2.8.0",
    "zod": "^3.23.8",
    "minimatch": "^10.0.1",
    "semver": "^7.6.3",
    "pino": "^9.0.0",
    "execa": "^8.0.0",
    "chokidar": "^4.0.0",
    "colorette": "^2.0.20",
    "fast-glob": "^3.3.2",
    "pathe": "^1.1.2"
  },
  "devDependencies": {
    "@kb-labs/devkit": "^1.0.0",
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4",
    "typescript": "^5.6.3"
  },
  "module": "./dist/index.js",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
