{
  "name": "@kb-labs/cli-runtime",
  "version": "1.0.0",
  "description": "CLI runtime - command execution, middleware, formatters",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@kb-labs/cli-contracts": "workspace:*",
    "@kb-labs/cli-core": "workspace:*",
    "@kb-labs/core-sys": "^1.0.0",
    "cli-table3": "^0.6.5",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@kb-labs/devkit": "^1.0.0",
    "@types/node": "^24.3.3",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
