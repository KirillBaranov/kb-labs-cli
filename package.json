{
  "name": "@kb-labs/cli",
  "version": "0.1.0",
  "private": true,
  "description": "KB Labs CLI tool for project management and automation",
  "type": "module",
  "author": {
    "name": "Kirill Baranov",
    "url": "https://github.com/kirill-baranov"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kirill-baranov/kb-labs-cli.git"
  },
  "bugs": {
    "url": "https://github.com/kirill-baranov/kb-labs-cli/issues"
  },
  "homepage": "https://github.com/kirill-baranov/kb-labs-cli#readme",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel --filter @kb-labs/cli-* run dev",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc -b tsconfig.tools.json",
    "check": "pnpm lint && pnpm type-check && pnpm test -- --run",
    "sync": "node devkit-sync.mjs",
    "sync:check": "node devkit-sync.mjs --check"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier -w"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@kb-labs/devkit": "github:KirillBaranov/kb-labs-devkit#main",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@actions/core": "^1",
    "@actions/github": "^6",
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "@vitest/coverage-v8": "^3.2.4",
    "better-sqlite3": "^12.2.0",
    "colorette": "^2.0.20",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.11.0"
}
