{
  "name": "@kb-labs/cli",
  "version": "0.1.0",
  "private": true,
  "description": "KB Labs CLI tool for project management and automation",
  "type": "module",
  "author": {
    "name": "Kirill Baranov",
    "url": "https://github.com/kirill-baranov"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kirill-baranov/kb-labs-cli.git"
  },
  "bugs": {
    "url": "https://github.com/kirill-baranov/kb-labs-cli/issues"
  },
  "homepage": "https://github.com/kirill-baranov/kb-labs-cli#readme",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "// ——— devkit": "────────────────────────────────────────",
    "devkit:sync": "node scripts/devkit-sync.mjs",
    "devkit:sync:ci": "node scripts/devkit-sync.mjs --ci-only",
    "devkit:check": "node scripts/devkit-sync.mjs --check",
    "devkit:force": "node scripts/devkit-sync.mjs --force",
    "devkit:help": "node scripts/devkit-sync.mjs --help",
    "postinstall": "pnpm -s devkit:sync || true",
    "// ——— core": "────────────────────────────────────────",
    "clean": "rimraf dist",
    "build": "pnpm -r run build",
    "build:clean": "pnpm -r run clean && pnpm -r run build",
    "dev": "pnpm -r --parallel --filter @kb-labs/cli-* run dev",
    "// ——— quality": "────────────────────────────────────────",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc -b tsconfig.tools.json",
    "// ——— ci/qa": "────────────────────────────────────────",
    "check": "pnpm lint && pnpm type-check && pnpm test -- --run",
    "ci": "pnpm clean && pnpm build && pnpm check",
    "// ——— cleanup": "────────────────────────────────────────",
    "clean:all": "rimraf node_modules packages/*/node_modules apps/*/node_modules dist",
    "// ——— cli": "────────────────────────────────────────",
    "kb": "node packages/cli/dist/bin.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier -w"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@kb-labs/devkit": "link:../kb-labs-devkit",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@actions/core": "^1",
    "@actions/github": "^6",
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "@vitest/coverage-v8": "^3.2.4",
    "better-sqlite3": "^12.2.0",
    "colorette": "^2.0.20",
    "prettier": "^3",
    "rimraf": "^6",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.11.0"
}
